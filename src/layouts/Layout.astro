---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = "Metal Cooper - Especialistas en exportaci√≥n y compra - venta de metales no ferrosos", 
  image = "/images/logo.png",
  canonicalURL = Astro.url.href
} = Astro.props;

const siteName = "Metal Cooper";
const twitterHandle = "@metalcooper";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<!-- Primary Meta Tags -->
		<title>{title} | {siteName}</title>
		<meta name="title" content={`${title} | ${siteName}`} />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />
	</head>
  <body class="min-h-screen bg-[#ffffff]">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--transition-duration: 0.3s;
		--font-primary: 'Aller', sans-serif;
		--font-secondary: 'Aller Display', sans-serif;
	}
	
	* {
		transition: all var(--transition-duration) ease-in-out;
		font-family: var(--font-primary);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-secondary);
	}

	.fade-in {
		opacity: 0;
		transform: translateY(20px);
		animation: fadeIn 0.8s ease-out forwards;
	}

	.slide-in {
		opacity: 0;
		transform: translateX(-20px);
		animation: slideIn 0.8s ease-out forwards;
	}

	@keyframes fadeIn {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes slideIn {
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.hover-scale {
		transition: transform 0.3s ease;
	}

	.hover-scale:hover {
		transform: scale(1.05);
	}

	/* Button Styles */
	.btn {
		@apply transition-all;
	}

	.btn-primary {
		@apply bg-[#4A5568] text-[#ffffff] hover:bg-[#2D3748];
	}

	.btn-secondary {
		@apply bg-[#ffffff] text-[#4A5568] border-2 border-[#4A5568] hover:bg-[#4A5568] hover:text-[#ffffff];
	}

	.btn-accent {
		@apply bg-[#E53E3E] text-[#ffffff] hover:bg-[#C53030];
	}
</style>
