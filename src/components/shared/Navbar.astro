---
import MobileMenu from './MobileMenu.astro';

// Get the current path
const currentPath = Astro.url.pathname;
---
<nav class="w-full px-4 sm:px-6 lg:px-8 bg-[#F1F1F1]">
  <div class="max-w-7xl mx-auto flex items-center justify-between h-[80px] md:h-[100px] px-4">
    <a href="/" class="flex items-center">
      <img src="/isotipo.png" alt="Metal Cooper" class="h-[40px] w-[60px] md:h-[58px] md:w-[85px]" />
    </a>
    <!-- Desktop navigation -->
    <div class="hidden md:flex items-center space-x-2 md:space-x-1 lg:space-x-4">
      <a href="/" 
        class={`text-[#373F52] hover:text-white font-bold hover:bg-[#B4282F] text-[16px] md:text-[18px] lg:text-[22px] px-3 lg:px-4 py-2 transition-colors duration-300 ${currentPath === '/' ? 'bg-[#B4282F] text-white' : ''}`}>
        Inicio</a>
      <a href="/about" 
        class={`text-[#373F52] font-bold hover:bg-[#B4282F] hover:text-white text-[16px] md:text-[18px] lg:text-[22px] px-3 lg:px-4 py-2 transition-colors duration-300 ${currentPath === '/about' ? 'bg-[#B4282F] text-white' : ''}`}>
        Sobre Nosotros</a>
      <a href="/solutions" 
        class={`text-[#373F52] font-bold hover:bg-[#B4282F] hover:text-white text-[16px] md:text-[18px] lg:text-[22px] px-3 lg:px-4 py-2 transition-colors duration-300 ${currentPath === '/solutions' ? 'bg-[#B4282F] text-white' : ''}`}>
        Soluciones Integrales</a>
      <a href="/weexport" 
        class={`text-[#373F52] font-bold hover:bg-[#B4282F] hover:text-white text-[16px] md:text-[18px] lg:text-[22px] px-3 lg:px-4 py-2 transition-colors duration-300 ${currentPath === '/weexport' ? 'bg-[#B4282F] text-white' : ''}`}>
        Exportación</a>
      <a href="/gallery" 
        class={`text-[#373F52] font-bold hover:bg-[#B4282F] hover:text-white text-[16px] md:text-[18px] lg:text-[22px] px-3 lg:px-4 py-2 transition-colors duration-300 ${currentPath === '/gallery' ? 'bg-[#B4282F] text-white' : ''}`}>
        Galería</a>
      <a href="/contact" 
        class={`text-[#373F52] font-bold hover:bg-[#B4282F] hover:text-white text-[16px] md:text-[18px] lg:text-[22px] px-3 lg:px-4 py-2 transition-colors duration-300 ${currentPath === '/contact' ? 'bg-[#B4282F] text-white' : ''}`}>
        Contacto</a>
    </div>
  </div>
</nav>
<!-- Mobile Menu -->
<MobileMenu />
