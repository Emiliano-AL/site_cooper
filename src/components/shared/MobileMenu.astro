<button
  id="mobile-menu-button"
  class="md:hidden fixed top-4 right-4 z-50 p-2 rounded-lg bg-black/10 backdrop-blur-sm"
  aria-label="Toggle menu"
>
  <div class="w-6 h-6 flex flex-col justify-center items-center gap-1.5">
    <span class="w-6 h-0.5 bg-black transition-all duration-300"></span>
    <span class="w-6 h-0.5 bg-black transition-all duration-300"></span>
    <span class="w-6 h-0.5 bg-black transition-all duration-300"></span>
  </div>
</button>

<div
  id="mobile-menu"
  class="fixed inset-0 bg-white/95 backdrop-blur-md z-40 transform -translate-x-full transition-transform duration-300 ease-in-out md:hidden"
>
  <nav class="relative h-full flex flex-col items-center justify-center space-y-8 p-4">
    <a href="/" class="text-[22px] text-[#373F52] font-bold transition-colors">Inicio</a>
    <a href="/about" class="text-[22px] text-[#373F52] font-bold transition-colors">Sobre Nosotros</a>
    <a href="/solutions" class="text-[22px] text-[#373F52] font-bold transition-colors">Soluciones Integrales</a>
    <a href="/weexport" class="text-[22px] text-[#373F52] font-bold transition-colors">Exportación</a>
    <a href="/gallery" class="text-[22px] text-[#373F52] font-bold transition-colors">Galería</a>
    <a href="/contact" class="text-[22px] text-[#373F52] font-bold transition-colors">Contacto</a>
  </nav>
</div>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuItems = mobileMenu?.querySelectorAll('a');

  function toggleMenu() {
    mobileMenu?.classList.toggle('-translate-x-full');
    document.body.classList.toggle('overflow-hidden');
    menuButton?.classList.toggle('active');
  }

  menuButton?.addEventListener('click', toggleMenu);

  // Close menu when clicking on a link
  menuItems?.forEach(item => {
    item.addEventListener('click', () => {
      mobileMenu?.classList.add('-translate-x-full');
      document.body.classList.remove('overflow-hidden');
      menuButton?.classList.remove('active');
    });
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (
      mobileMenu &&
      !mobileMenu.contains(e.target as Node) &&
      !menuButton?.contains(e.target as Node) &&
      !mobileMenu.classList.contains('-translate-x-full')
    ) {
      toggleMenu();
    }
  });
</script>

<style>
  #mobile-menu-button.active span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  #mobile-menu-button.active span:nth-child(2) {
    opacity: 0;
  }

  #mobile-menu-button.active span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }
</style> 